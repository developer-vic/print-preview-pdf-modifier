{
  "name": "print-preview-pdf-modifier",
  "version": "6.0.0",
  "description": "Full-stack PDF modifier with backend API and frontend automation. Enhanced ShipEngine support and unified auto-print behavior.",
  "main": "server.js",
  "scripts": {
    "start": "node launcher.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend": "node backend/server.js",
    "backend:dev": "nodemon backend/server.js",
    "frontend": "node frontend/index.js",
    "frontend:dev": "nodemon frontend/index.js",
    "google:login": "node frontend/googleLogin.js",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "test": "jest",
    "build": "echo 'Build completed'",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "node-fetch": "^2.7.0",
    "playwright": "^1.56.1",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "keywords": [
    "pdf",
    "text-extraction",
    "pdf.js",
    "backend",
    "api",
    "modifier",
    "playwright",
    "automation",
    "full-stack",
    "shipengine",
    "auto-print",
    "pdf-modification"
  ],
  "author": "PDF Modifier Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
